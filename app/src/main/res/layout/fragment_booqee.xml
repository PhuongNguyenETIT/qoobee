<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/fragment_qoobee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextGoogleSearch"
        android:hint="Google Search"
        android:textColor="@color/colorYellowDark"
        android:layout_alignTop="@id/imageview"
        android:layout_toLeftOf="@+id/imageSearchGoogle"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/imageSearchGoogle"
        android:src="@drawable/ic_search_black_48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageview"
        android:layout_marginEnd="16dp"
        android:background="#fdf8f8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/imageSearchGoogle"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Hôm nay bạn thế nào?"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageview"
        android:layout_margin="16dp"
        android:text="Information"
        android:textSize="24sp" />


</RelativeLayout>